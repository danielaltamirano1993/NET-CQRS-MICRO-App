              "schema": {
                "$ref": "#/components/schemas/CrearItemCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CrearItemCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CrearItemCommand"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
